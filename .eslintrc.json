{
  "root": true,
  "extends": ["prettier"],
  "runtime": "bun",
  "execArgv": "--bun",
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "eslint-plugin-prettier",
    "eslint-config-prettier",
    "eslint-plugin-node",
    "eslint-plugin-node-security",
    "eslint-plugin-require"
  ],
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "navigator": false,
    "window": false,
    "crypto": true,
    "location": false,
    "URL": false,
    "URLSearchParams": false,
    "fetch": false,
    "EventSource": false,
    "localStorage": false,
    "sessionStorage": false,
    "websocket": false
  }
}
